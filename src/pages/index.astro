---
import Layout from "../layouts/Layout.astro";
import Main from "@/feature/content/Main";
import { _get } from "@/services/http-client";
import type { Articles } from "@/types/article";
import type { Tags } from "@/types/tags";
import { API } from "@/constants/api";
import { CONTENT_LIMIT } from "@/constants/pagination";

const data: Articles = await _get(`${API.ARTICLES}?offset=0&limit=${CONTENT_LIMIT}`);
const tags: Tags = await _get(`${API.TAGS}`);
---

<Layout>
  <Main client:load data={data} tagsData={tags} />
</Layout>
