---
import Layout from "../layouts/Layout.astro";
import ArticleList from "@/feature/article/ArticleList.astro";
import type { Articles } from "@/types/article";
import HttpClient from "@/services/http-client";

const data: Articles = await HttpClient.get(`/articles`);
---

<Layout>
  <div class="container">
    <ArticleList data={data} />
  </div>
</Layout>

<style>
  .container {
    max-width: 1280px;
    margin: 50px auto;
  }
</style>
